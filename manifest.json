{
  "name" : "Assembla Utilities",
  "version" : "1.0",
  "description" : "Allows you to manage basic Assembla functionality from anywhere in Chrome.",
  "permissions": [ "tabs", "http://*/*", "https://*/*" ],
  "icons": { "16": "img/assembla.png", "48": "img/assembla.png", "128": "img/assembla.png" },
  "browser_action": {
    "default_icon": "img/assembla.png",
